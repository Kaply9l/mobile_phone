<!--start-breadcrumbs-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumb">
        <li><a href="/"><%= render_breadcrumbs %></a></li>
        <li>Поиск по запросу</li>
      </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->
<!--prdt-starts-->
<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-9 prdt-left">
        <% if !@products.empty?  %>
          <div class="product-one">
            <% @products.each do |prod|  %>
              <div class="col-md-4 product-left p-left">
                <div class="product-main simpleCart_shelfItem">
                  <a href="/product/<%=prod.id %>" class="mask">
                    <%= image_tag(prod.img, alt: "", class: "img-responsive zoom-img" ) %>
                  </a>
                  <div class="product-bottom">
                    <h3><%=prod.title %></h3>
                    <p>Explore Now</p>
                    <h4>$ <%=prod.price %>
                    <% if prod.old_price %>
                      <small><del>$ <%= prod.old_price %></del></small>
                    <% end %>
                    </h4>
                  </div>
                  <div class="srch srch1">
                  </div>
                </div>
              </div>
            <% end %>
            <div class="clearfix"></div>
          </div>
        <% else %>
          <h3>Nothing to show...</h3>
        <% end %>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
<!--product-end-->