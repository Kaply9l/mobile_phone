<div class="top-header">
  <div class="container">
    <div class="top-header-main">
      <div class="col-md-6 top-header-left">
          <div class="btn-group">
            <a class="dropdown-toggle" data-toggle="dropdown">Account <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <% if user_signed_in? %>
                <li>
                  <a href="#">
                    Welcome, <%= current_user.email %>
                  </a>
                </li>
                <% if current_user.try(:admin?) %>
                  <li>
                    <%= link_to 'You Administrator', '#', style: "color: red" %>
                  </li>
                  <li>
                    <%= link_to 'Add new product', new_product_path, class: "" %>
                  </li>
                <% end %>
                <li>
                  <%= link_to 'Edit profile', edit_user_registration_path %>
                </li>
                <li>
                  <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                </li>
              <% else %>
                <li>
                  <%= link_to 'Sign in', new_user_session_path %>
                </li>
                <li>
                  <%= link_to 'Sign up', new_user_registration_path %>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>
      <div class="col-md-6 top-header-left">
        <div class="cart box_1">

          <a href="/cart" onclick="getCart(); return false;">
            <div class="total">
              <%= image_tag('cart-1.png', alt: "") %>
              <% if cart_items.any? %>
                <span class="simpleCart_total">
                  <%= format("%.2f", cart_total ) %> $
                </span>
              <% else %>
                <span class="simpleCart_total">Empty Cart</span>
              <% end %>

            </div>
          </a>
          <div class="clearfix"> </div>
        </div>
      </div>
      <div class="clearfix"></div>
    </div>
  </div>
</div>